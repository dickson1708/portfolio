<style>
    .glow-button {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
        margin-top: 2.5rem;
        padding: 1.25rem 2.5rem;
        max-width: max-content;
        margin-left: auto;
        margin-right: auto;
        border-radius: 0.5rem;
        background-color: #141428;
        border: 1px solid #4b5563; /* gray-700 */
        overflow: hidden;
        transition: border-color 0.3s;
        text-decoration: none;
        color: white;
    }

    .glow-button:hover {
        border-color: #cbacf9;
    }

    .glow-content {
        position: relative;
        z-index: 10;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .glow-overlay {
        position: absolute;
        top: 0;
        left: 100%;
        width: 100%;
        height: 100%;
        background: rgba(203, 172, 249, 0.2); /* violeta translÃºcido */
        filter: blur(24px);
        animation: glow-slide 2s linear infinite;
        pointer-events: none;
    }

    @keyframes glow-slide {
        0% {
            left: 100%;
        }
        100% {
            left: -100%;
        }
    }
</style>